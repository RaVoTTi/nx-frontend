{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["environments/*"],
      "@frontend/auth-admin": ["libs/auth-admin/src/index.ts"],
      "@frontend/auth-base": ["libs/auth-base/src/index.ts"],
      "@frontend/auth-user": ["libs/auth-user/src/index.ts"],
      "@frontend/book-admin": ["libs/book-admin/src/index.ts"],
      "@frontend/book-base": ["libs/book-base/src/index.ts"],
      "@frontend/checkout": ["libs/checkout/src/index.ts"],
      "@frontend/my-learning": ["libs/my-learning/src/index.ts"],
      "@frontend/order": ["libs/order/src/index.ts"],
      "@frontend/settings": ["libs/settings/src/index.ts"],
      "@frontend/user-admin": ["libs/user-admin/src/index.ts"],
      "@frontend/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
