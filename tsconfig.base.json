{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env/*": ["environments/*"],
      "@frontend/order": ["libs/order/src/index.ts"],
      "@frontend/product": ["libs/product/src/index.ts"],
      "@frontend/ui": ["libs/ui/src/index.ts"],
      "@frontend/user": ["libs/user/src/index.ts"],
      "@frontend/user-admin": ["libs/user-admin/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
